.content{
  height: 150px;
  margin-top: 20px;
}/*内容*/

.main{
  display: flex;
}/*布局*/

.titlekinds{
  font-size: 15px;
  font-weight: 350;
  color: green
}/*板块字体*/

.item-item1{
  position: relative;
  left: 5px;
}/*标题位置*/

.avatar{
  height: 60px;
  width: 60px;
  border-radius: 100%;
  float: right;
  left:60%;
}/*头像*/

.item-item2{
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  position: absolute;
  left: 5px;
  width: 80%;
  height: 60px;
  margin-top: 10px;
  font-weight: 300;
  background-color: whitesmoke;
}/*文本内容*/

.readspace{
  border-style: solid;
  border-width: 2px;
  border-color: gainsboro;
}/*分隔条*/
